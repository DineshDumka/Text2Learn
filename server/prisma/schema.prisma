// Prisma schema for Text2Learn database
// Defines User, Course, and Lesson models

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  courses   Course[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

// Course model stores generated course outlines
model Course {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  description String   @db.Text
  outline     Json     // Stores CourseOutline as JSON
  lessons     Lesson[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@map("courses")
}

// Lesson model stores generated lesson content
model Lesson {
  id          String   @id @default(cuid())
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  moduleIndex Int      // Which module this lesson belongs to (0-indexed)
  lessonIndex Int      // Position within the module (0-indexed)
  title       String
  content     Json     // Stores LessonContent as JSON
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([courseId, moduleIndex, lessonIndex])
  @@index([courseId])
  @@map("lessons")
}
